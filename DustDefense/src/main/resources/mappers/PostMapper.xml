<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.domain.post.PostMapper">

    <!-- community 테이블 전체 컬럼 -->
    <sql id="postColumns">
		id
		,title
        , content
        , user_id
        , view_cnt
        <!-- , notice_yn -->
        , delete_yn
        <!-- , created_date -->
        <!-- , modified_date -->
    </sql>


    <!-- 게시글 저장 -->
    <insert id="save" parameterType="com.example.demo.domain.post.PostMapper">
        INSERT INTO community (
            title
        	, content
        	, user_id
        	, view_cnt
        	, delete_yn
        ) VALUES (
			#{title}
            , #{content}
            , #{userId}
            , 0
            <!-- , #{noticeYn} -->
            , 0
            <!-- , NOW() -->
            <!-- , NULL -->
        )
    </insert>


    <!-- 게시글 상세정보 조회 -->
    <select id="findById" parameterType="long" resultType="com.example.demo.domain.post.PostMapper">
        SELECT
            <include refid="postColumns" />
        FROM
            community
        WHERE
            id = #{value}
    </select>


    <!-- 게시글 수정 -->
    <update id="update" parameterType="com.example.demo.domain.post.PostMapper">
        UPDATE community
        SET
              <!-- modified_date = NOW() -->
            title = #{title}
            , content = #{content}
            , user_id = #{userId}
            <!-- , notice_yn = #{noticeYn} -->
        WHERE
            id = #{id}
    </update>


    <!-- 게시글 삭제 -->
    <delete id="deleteById" parameterType="long">
        UPDATE community
        SET
            delete_yn = 1
        WHERE
            id = #{id}
    </delete>


    <!-- 게시글 리스트 조회 -->
    <select id="findAll" resultType="com.example.demo.domain.post.PostMapper">
        SELECT
            <include refid="postColumns" />
        FROM
            community
        WHERE
            delete_yn = 0
        ORDER BY
            id DESC
    </select>

</mapper>